doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Quick Sale Savers - Contact Messages
    link(rel="stylesheet" href="/styles.css")
  body
    include navbar1
    .container
      h1 Contact Messages

      if contacts.length
        table
          thead
            tr
              th ID
              th Name
              th Email
              th Message
              th Submitted At
          tbody
            each contact in contacts
              tr
                td= contact.id
                td= contact.name
                td= contact.email
                td= contact.message
                td= new Date(contact.created_at).toLocaleString('en-GB')
      else
        p No contact messages found.

      a.button(href="/admin-dashboard") Back to Home
